        <% if current_user_m %>
            <%= link_to 'Lihat Lelang', lelangind_lelang_barang_path, class: 'uk-button uk-button-secondary', style: 'background-color: #3b3b3b;' %>
        <% else %>
            <%= link_to 'Daftar', auth_new_path, class: 'uk-button uk-button-secondary', style: 'background-color: #3b3b3b;' %>
        <% end %>
    </p>
