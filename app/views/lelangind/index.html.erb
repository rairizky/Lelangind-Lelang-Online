<% if notice %>
    <div class="uk-alert-success" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <p><%= notice %></p>
    </div>
<% end %>
<% if alert %>
    <div class="uk-alert-danger" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <p><%= alert %></p>
    </div>
<% end %>
<div class="uk-text-center">
    <br>
    <img src="/Asset/img/accs/take_lelang.svg" width="300" alt=""  uk-scrollspy="cls: uk-animation-slide-left; repeat: true; delay: 600">
    <div uk-scrollspy="cls: uk-animation-slide-right; repeat: true; delay: 1200">
        <h1 class="uk-text-bolder uk-text-uppercase uk-heading-medium" style="color: #3b3b3b;">Lelangind lelang online</h1>
        <h4 class="uk-text-light uk-margin-remove-top" style="color: #686c7b;">Cari dan temukan barang berkualitas untuk anda miliki! ayo ikut lelang sekarang!</h4>
    </div>
    <div uk-scrollspy="cls: uk-animation-slide-bottom; repeat: true; delay: 1800">
        <p uk-margin>
            <a class="uk-button uk-button-default" href="#kelebihan" uk-scroll>lebih lanjut</a>
            <%= link_to 'Lihat Lelang', lelangind_lelang_barang_path, class: 'uk-button uk-button-secondary', style: 'background-color: #3b3b3b;' %>
        </p>
    </div>
</div><br><br><br><br><br><hr><br><br>
