<% if notice %>
  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
<% end %>
<% if @petugas_id.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h5><%= pluralize(@petugas_id.errors.count, "error") %> Upss!, Gagal update profile :</h5>
    <hr>
    <ul>
      <% @petugas_id.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
    <div class="col-md-4">
        <div class="card card-user">
          <div class="image">
            <img src="/admin/assets/img/damir-bosnjak.jpg" alt="...">
          </div>
          <div class="card-body">
            <div class="author">
              <div>
                <img class="avatar border-gray" src="/admin/assets/img/mike.jpg" alt="...">
                <h5 class="title"><%= current_user_p.nama_petugas %></h5>
              </div>
              <p class="description">
                Username
                <br>
                @<%= current_user_p.username %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card card-user">
          <div class="card-header">
            <h5 class="card-title">Edit Profile</h5>
          </div>
          <div class="card-body">
            <%= form_with model: @petugas_id, url: update_profile_p_path, local: true do |e| %>
              <div class="row">
                <div class="col-md-5 pr-1">
                  <div class="form-group">
                    <label>Nama petugas</label>
                    <%= e.text_field :nama_petugas, class: 'form-control', placeholder: 'Nama petugas', autocomplete: 'off' %>
                  </div>
                </div>
                <div class="col-md-3 px-1">
                  <div class="form-group">
                    <label>Username</label>
                    <%= e.text_field :username, class: 'form-control', placeholder: 'Username', autocomplete: 'off' %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4 pr-1">
                  <div class="form-group">
                    <label>Level</label>
                    <input type="text" class="form-control" disabled placeholder="City" value="<%= Level.find(current_user_p.id).level %>">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="update ml-auto mr-auto">
                  <%= e.submit 'Update Profile', class: 'btn btn-primary btn-round' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
</div>